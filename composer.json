{
    "name": "worksome/foggy-laravel",
    "description": "Adds Foggy support in Laravel",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "doctrine/dbal": "^3.5.1 || ^4.0",
        "illuminate/console": "^11.0 || ^12.0",
        "illuminate/database": "^11.0 || ^12.0",
        "illuminate/support": "^11.0 || ^12.0",
        "thecodingmachine/safe": "^2.5 || ^3.0",
        "worksome/foggy": "^0.6"
    },
    "require-dev": {
        "nunomaduro/collision": "^7.10 || ^8.1.1",
        "orchestra/testbench": "^9.12 || ^10.1",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-laravel": "^3.1",
        "worksome/coding-style": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\FoggyLaravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\FoggyLaravel\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "lint": "vendor/bin/ecs --fix",
        "test:unit": "vendor/bin/pest -p",
        "test:types": "vendor/bin/phpstan analyse",
        "test:style": "vendor/bin/ecs",
        "test:coverage": "vendor/bin/pest -p --coverage",
        "test": [
            "@test:style",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "worksome/coding-style": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Worksome\\FoggyLaravel\\FoggyServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
